{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "thundercatsho/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "thundercatsho/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "thundercatsho/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "thundercatsho/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": [
                "client",
                "server"
            ]
        }
    ]

}